ion-nav-bar.bar-green
	ion-nav-back-button

	ion-nav-title PickApp!

	ion-nav-buttons(side="right")
		button.button.button-icon.button-clear.ion-ios-bell(ui-sref="app.notifications()")
			.bubblebadge(ng-show="total_notifications") {{total_notifications}}

ion-tabs.tabs-background-balanced.tabs-color-light.tabs-icon-top
	//- .tabs-item-hide
	ion-tab(icon='ion-home' ui-sref='app.home' title="Home" on-deselect="clearHistory()")
		ion-nav-view(name='home-tab')
	ion-tab(icon='ion-person' ui-sref='app.profile' title="Profilo" on-deselect="clearHistory()")
		ion-nav-view(name='profile-tab')
	ion-tab(icon='ion-location', ui-sref='app.rooms' title="Vrooms" on-deselect="clearHistory()")
		ion-nav-view(name='rooms-tab')
	ion-tab(icon='ion-android-notifications', ui-sref='app.notifications' title="Notifiche" on-deselect="clearHistory()" badge="total_notifications" badge-style="badge-assertive")
		ion-nav-view(name='notifications-tab')
	a.tab-item.favorites_toggle(ng-init="fav_rooms_menu = false" ng-click="fav_rooms_menu = !fav_rooms_menu" ng-class="{'active': fav_rooms_menu == true}")
		i.icon.ion-star
		| Preferiti

	.submenu(ng-class="{'open': fav_rooms_menu == true}")
		hscroller.preferred_rooms(zooming="false" direction="x" ng-click="fav_rooms_menu = !fav_rooms_menu")
			hcard.room(ng-repeat="room in user.preferred_rooms track by $index" desc="{{room.name}}"  ui-sref="app.room({room_id: room.id})")
			hcard.room(desc="SCOPRI LE VROOM!" ui-sref="app.rooms" ng-ig="user.preferred_rooms.length == 0")


